{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2017",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "strict": true
  },
  "include": [
    "test",
    "src"
  ],
  "files": [
    "src/resource.d.ts"
  ]
}